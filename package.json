{
  "name": "eleventy-with-webpack",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Katsushi OUGI <ougi@to-r.net>",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=development npm-run-all clean --parallel start:*",
    "start:11ty": "eleventy --serve",
    "start:webpack": "webpack -w",
    "build": "cross-env NODE_ENV=production npm-run-all clean build:*",
    "build:11ty": "eleventy",
    "build:webpack": "webpack",
    "clean": "rimraf _site",
    "format": "prettier --write **/*.{js,scss,json}",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint --fix './src/assets/webpack/**/*.js'",
    "lint:scss": "stylelint --fix './src/assets/webpack/**/*.scss'",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.0",
    "@babel/core": "^7.16.12",
    "@babel/eslint-parser": "^7.16.5",
    "@babel/preset-env": "^7.16.11",
    "babel-loader": "^8.2.3",
    "cross-env": "^7.0.3",
    "css-loader": "^6.5.1",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jquery": "^1.5.1",
    "husky": "^7.0.0",
    "lint-staged": "^12.3.2",
    "mini-css-extract-plugin": "^2.5.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "postcss-loader": "^6.2.1",
    "postcss-preset-env": "^7.2.3",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "sass": "^1.49.0",
    "sass-loader": "^12.4.0",
    "stylelint": "^14.3.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-scss": "^5.0.2",
    "webpack": "^5.67.0",
    "webpack-cli": "^4.9.2",
    "webpack-manifest-plugin": "^4.1.1"
  },
  "lint-staged": {
    "src/assets/webpack/**/*.{js,scss}": [
      "yarn format",
      "yarn lint"
    ]
  }
}
